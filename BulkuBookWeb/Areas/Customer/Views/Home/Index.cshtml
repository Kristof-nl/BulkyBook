@model IEnumerable<BulkyBook.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <div class="card-body">
                            <img src="@product.ImageUrl" class="card-img-top rounded" height=350px/>
                            <div class="pl-1 mt-2">
                                <p class="card-title h5 text-dark">@product.Title</p>
                                <p class="card-title text-info small">@product.Author</p>
                            </div>
                            <div>
                                <p class="small">List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div>
                                <p class="small">As low as:<b>$@product.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                            <a asp-action="Details" class="btn btn-primary form-check control" asp-route-id="@product.Id">
                                Details
                            </a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
    